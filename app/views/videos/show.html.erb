<div class="main_container">

  <h1>Labels go here</h1>

  <div class="cards-show">
    <div>
      <% if @video.you_tube_key.present? %>
        <iframe id="ytplayer1" type="text/html" width="853" height="505"
        src="https://www.youtube.com/embed/<%= @video.you_tube_key %>?autoplay=1"
        frameborder="0"></iframe>
      <% else %>
        <%= cl_video_tag @video.cloudinary_video_id, 
        controls: true,
        transformation: [ 
          height: 300, width: 400, crop: :fill
         ] %>
      <% end %>
    </div>

    <div class="card-category">
      <% if @interaction %>
        <% btn_helpful = @interaction.helpful ? "btn-primary" : "btn-flat" %>
        <% btn_good_style = @interaction.good_style ? "btn-primary" : "btn-back" %>
        <% btn_up_vote = @interaction.vote ? "btn-primary" : "icons" %>
        <% btn_down_vote = @interaction.vote ? "icons" : (@interaction.vote==nil ? "icons" : "btn-primary") %>
      <% end %>
      <%= link_to "helpful", video_interactions_path(@video, interaction: { helpful: !@interaction.helpful }), method: :post, remote: true, class: "btn #{btn_helpful}", id: "helpful" %>
      <%= link_to "good style", video_interactions_path(@video, interaction: { good_style: !@interaction.good_style }), method: :post, remote: true, class: "btn #{btn_good_style}", id: "style" %>
      <%= link_to video_interactions_path(@video, interaction: { vote: (@interaction.vote ? nil : true) }), method: :post, remote: true, class: "#{btn_up_vote}", id: "like" do %>
        <i class="far fa-thumbs-up"></i>
      <% end %>
      <i class="fas fa-user-graduate"></i>
      <%= link_to video_interactions_path(@video, interaction: { vote: @interaction.vote ? false : (@interaction.vote==nil ? false : nil) }), method: :post, remote: true, class: "#{btn_down_vote}", id: "dislike" do %>
        <i class="far fa-thumbs-down"></i>
      <% end %>
    </div>
  </div>
</div>

