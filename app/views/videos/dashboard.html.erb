                    <% else %>
                      <img src="https://img.youtube.com/vi/<%= video.you_tube_key %>/hqdefault.jpg">
                    <% end %>
                      <div class="card-video-infos">
                        <div>
                          <h2><%= video.sub_category.name %></h2>
                        </div>
                        <div>
                          <% interaction = Interaction.find_by(user_id: current_user.id, video_id: video.id) %>
                           <% if interaction && interaction.completed? %>
                            <%= link_to "rewind", video_interactions_path(video, interaction: {completed: false}), method: "POST", class: "btn btn-flat btn-flat-green-view" %>
                          <% else  %>
                            <%= link_to "mastered it", video_interactions_path(video, interaction: {completed: true}), method: "POST", class: "btn btn-flat-green btn-flat-green-view" %>
                          <% end %>
                          <%= link_to 'view video', video_path(video), class: "btn btn-back btn-back-view" %>
                        </div>
                      </div>
                  </div>
                </div>
              <% end %>
            <% end %>
        <a class="carousel-control-prev" href="#carouselExampleCaptions1" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions1" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>


