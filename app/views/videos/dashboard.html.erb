<div class=main_container>
<h2>your dashboard</h2>
<h3>rookie level 6/6 </h3>
<h3 class="status">level mastered </h3>
  <div class="cards">
    <% @rookie_videos.each do |video| %>
      <%= link_to video_path(video) do %>
        <div class="card-video" id="results">
          <% interaction = video.interactions.find {|i| i.user_id == current_user.id} %>
          <% if interaction && interaction.completed? %>
            <img src="https://img.youtube.com/vi/<%= video.you_tube_key %>/hqdefault.jpg">
            <%= image_tag "stamp.png", alt: "stamp", class: "stamp" %>
          <% else %>
            <img src="https://img.youtube.com/vi/<%= video.you_tube_key %>/hqdefault.jpg">
          <% end %>
            <div class="card-video-infos">
              <div>
                <h3><%= video.sub_category.name %></h3>
                <p> other labels go here </p>
                <h2 class="card-video-pricing">"#{video.rating} Votes"</h2>
              </div>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>

<div class="bd-example">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @rookie_videos.each_with_index do |video, i| %>
        <% i = i.to_s %>
        <% if i == '0' %>
          <li data-target="#carouselExampleCaptions" data-slide-to=<%= i %>, class="active"></li>
        <% else %>
          <li data-target="#carouselExampleCaptions" data-slide-to=<%= i %> ></li>
        <% end %>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% @rookie_videos.each_with_index do |video, i| %>
        <% i = i.to_s %>
        <% if i == '0' %>
          <div class="carousel-item active">
            <img src="https://img.youtube.com/vi/<%= video.you_tube_key %>/hqdefault.jpg" class="d-block w-100" alt="video card">
            <div class="carousel-caption d-none d-md-block">
              <h5>First slide label</h5>
              <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
            </div>
          </div>
        <% else %>
          <div class="carousel-item">
            <img src="https://img.youtube.com/vi/<%= video.you_tube_key %>/hqdefault.jpg" class="d-block w-100" alt="video card">
            <div class="carousel-caption d-none d-md-block">
              <h5>Second slide label</h5>
              <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
          </div>
        <% end %>
      <% end %>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

