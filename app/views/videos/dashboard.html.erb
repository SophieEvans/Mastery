<div class=main_container>
<h2>your dashboard</h2>
<h3>rookie level 6/6 </h3>

  <div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @rookie_videos.each_with_index do |video, i| %>
          <% i = i.to_s %>
          <% if i == '0' %>
            <li data-target="#carouselExampleCaptions" data-slide-to=<%= i %>, class="active"></li>
          <% else %>
            <li data-target="#carouselExampleCaptions" data-slide-to=<%= i %> ></li>
          <% end %>
        <% end %>
      </ol>
        <div class="carousel-inner">
          <% @rookie_videos.each_with_index do |video, i| %>
            <% i = i.to_s %>
            <% if i == '0' %>
              <div class="carousel-item active">
                <div class="card-video" id="results">
                  <% interaction = video.interactions.find {|i| i.user_id == current_user.id} %>
                  <% if interaction && interaction.completed? %>
                    <img src="https://img.youtube.com/vi/<%= video.you_tube_key %>/hqdefault.jpg">
                    <%= image_tag "stamp.png", alt: "stamp", class: "stamp" %>
                  <% else %>
                    <img src="https://img.youtube.com/vi/<%= video.you_tube_key %>/hqdefault.jpg">
                  <% end %>
                    <div class="card-video-infos">
                      <div>
                        <h1><%= video.sub_category.name %></h1>
                      </div>
                      <div>
                        <% interaction = Interaction.find_by(user_id: current_user.id, video_id: video.id) %>
                         <% if interaction && interaction.completed? %>
                          <%= link_to "Mark as not mastered", video_interactions_path(video, interaction: {completed: false}), method: "POST", class: "btn btn-back" %>
                        <% else  %>
                          <%= link_to "I've mastered it", video_interactions_path(video, interaction: {completed: true}), method: "POST", class: "category-choice" %>
                        <% end %>
                        <%= link_to 'view video', video_path(video), class: "btn btn-flat" %>
                      </div>
                    </div>
                </div>
              </div>
            <% else %>
              <div class="carousel-item">
                <img src="https://img.youtube.com/vi/<%= video.you_tube_key %>/hqdefault.jpg" class="d-block w-100" alt="video card">
                <div class="carousel-caption d-none d-md-block">
                  <h2><%= video.sub_category.name %></h2>
                </div>
              </div>
            <% end %>
          <% end %>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

