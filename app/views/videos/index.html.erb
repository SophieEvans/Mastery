<div class=main_container>

  <h1>Let's master gymnastics!</h1>

  <h2>
    <%= form_tag videos_path, method: :get do %>
      <div class="search-form-control form-group">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a trick"
        %>
        <%= submit_tag "Search", class: "btn btn-flat" do %>
          <i class="fas fa-search"></i> Search
          <% end %>
      </div>
    <% end %>
  </h2>


  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="form-post">
          <%= form_tag videos_path, method: :get do %>
              <%= check_box_tag :query,
                params[:query]
                %>
            <div class="form-group">
              <div class="category-choices">
                <% SubCategory.all.each do |category| %>
                  <input type="checkbox" class="hidden" value="<%= category.id %>" name="post[category_ids][]" id="post_category_ids_<%= category.id %>">
                  <label class="category-choice" for="post_category_ids_<%= category.id %>">
                    <%= category.name %>
                  </label>
                <% end %>
               </div>
            </div>
          <%= submit_tag "Find videos", class: "btn btn-secondary"  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<h2>Top Videos</h2>
  <div class="cards">
    <% @videos.each do |video| %>
      <%= link_to video_path(video) do %>
        <div class="card-video">
          <img src="https://img.youtube.com/vi/<%= video.you_tube_key %>/hqdefault.jpg">
            <div class="card-video-infos">
              <div>
                <h6><%= video.title %> </h6>
                <p><%= video.sub_category.name %></p>
                 <p><%= video.difficulty %> </p>
              </div>
                <h2 class="card-video-pricing">39 Votes</h2>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
